@model IEnumerable<DataLibrary.Models.FoodModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <!--ROW-->
            <th> @Html.DisplayNameFor(model => model.Id) </th> <!--COLUMNS insde the row for headers-->
            <th> @Html.DisplayNameFor(model => model.Title) </th>
            <th> @Html.DisplayNameFor(model => model.Description) </th>
            <th> @Html.DisplayNameFor(model => model.Price) </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td> <!--DisplayFor tag to display data foreach item/column-->
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
            </tr>
        }
    </tbody>
</table>
